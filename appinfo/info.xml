<?xml version="1.0"?>
<info xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="https://apps.nextcloud.com/schema/apps/info.xsd">
    <id>folder_protection</id>
    <name>Folder Protection</name>
    <summary>Protect folders from being moved, copied, or deleted</summary>
    <description>Prevents specific folders from being moved, copied, or deleted to avoid server performance issues with large folders.</description>
    <version>2.0.0</version>
    <licence>agpl</licence>
    <author mail="ricardo.jofebar@gmail.com">Ricardo Ferreira</author>
    <namespace>FolderProtection</namespace>
    <category>files</category>
    
    <dependencies>
        <php min-version="8.1"/>
        <nextcloud min-version="28" max-version="32"/>
    </dependencies>
    <website>https://github.com/kreotropic/folder_protect</website>
    <bugs>https://github.com/kreotropic/folder_protect/issues</bugs>
    <repository>https://github.com/kreotropic/folder_protect</repository>

    <commands>
        <command>OCA\FolderProtection\Command\ListProtected</command>
        <command>OCA\FolderProtection\Command\Protect</command>
        <command>OCA\FolderProtection\Command\Unprotect</command>
        <command>OCA\FolderProtection\Command\CheckProtection</command>
        <command>OCA\FolderProtection\Command\ClearNotifications</command>
    </commands>
    
    <settings>
        <admin-section>OCA\FolderProtection\Settings\AdminSection</admin-section>
        <admin>OCA\FolderProtection\Settings\AdminSettings</admin>
    </settings>

    <dav>
        <properties>
            <property namespace="http://nextcloud.org/ns" name="is-protected">
                <description>Indicates if the folder is protected from modifications</description>
            </property>
            <property namespace="http://nextcloud.org/ns" name="protection-reason">
                <description>Reason why the folder is protected</description>
            </property>
            <property namespace="http://nextcloud.org/ns" name="is-deletable">
                <description>Indicates if the folder can be deleted</description>
            </property>
            <property namespace="http://nextcloud.org/ns" name="is-renameable">
                <description>Indicates if the folder can be renamed</description>
            </property>
            <property namespace="http://nextcloud.org/ns" name="is-moveable">
                <description>Indicates if the folder can be moved</description>
            </property>
        </properties>
    </dav>


    <types>
        <filesystem/>
    </types>




</info>
